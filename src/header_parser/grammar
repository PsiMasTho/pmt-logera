%token-path ../header_scanner/header_token_enums.h

%scanner ../header_scanner/header_scanner.h
%scanner-class-name HeaderScanner

%token DECL_VAR
%token IDENT
%token DECL_ATTR

%stype std::string

%%

input:
    // empty
|
    input line
;

line:
    declare_attribute '\n'
|
    declare_attribute EOF
|
    declare_variable '\n'
|
    declare_variable EOF
|
    '\n'
;

identifier:
    IDENT
    {
        string txt(d_scanner.matched());
            // removing all ';'. Then removing leading and trailing spaces and '\n'
        $$ = trim(removeCh(txt, ';'));
    }
;

declare_attribute:
    DECL_ATTR identifier ';'
    {
        d_ret->addAttr($2);
    }
|
    declare_attribute identifier ';'
    {
        d_ret->addRegexToLastAttr($2);
    }
;

declare_variable:
    DECL_VAR identifier ';'
    {
        d_ret->addVar($2);
    }
|
    declare_variable identifier ';'
    {
        d_ret->addAttrToLastVar($2);
    }
;